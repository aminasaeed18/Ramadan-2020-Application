<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayDua">
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Play Iftar Dua"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
<Button
    android:onClick="play"
    android:rotation="270"
    android:id="@+id/iftPlay"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="center"
    android:layout_marginLeft="90dp"
   android:layout_marginRight="20dp"
   android:background="@drawable/ic_arrow_drop_down_circle_black_24dp"
    />
        <Button
            android:onClick="stop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_pause_circle_filled_black_24dp"
            />
    </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:background="@drawable/background"
       android:layout_marginTop="1dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">
       <TextView
           android:layout_marginLeft="15dp"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="Play Suhoor Dua"
           android:textColor="#ffff"
           android:textSize="20dp"
           android:gravity="center"
           android:layout_gravity="center"
           />
       <Button
           android:onClick="playNew"
           android:rotation="270"
           android:id="@+id/suhPlay"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center"
           android:layout_marginLeft="90dp"
           android:layout_marginRight="20dp"
           android:background="@drawable/ic_arrow_drop_down_circle_black_24dp"
           />
       <Button
           android:onClick="stop"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_gravity="center"
           android:layout_marginRight="20dp"
           android:background="@drawable/ic_pause_circle_filled_black_24dp"
           />
   </LinearLayout>

</LinearLayout>